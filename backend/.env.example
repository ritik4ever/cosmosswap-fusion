# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# CORS Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cosmosswap
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
COSMOS_RPC_URL=https://rpc-cosmoshub.cosmos-apis.com
ETHEREUM_WS_URL=wss://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Contract Addresses
ETHEREUM_CONTRACT_ADDRESS=0x...
COSMOS_CONTRACT_ADDRESS=cosmos1...

# Private Keys (NEVER commit real keys)
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here
COSMOS_MNEMONIC=your cosmos mnemonic phrase here

# Security
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Gas Configuration
ETHEREUM_GAS_LIMIT=500000
ETHEREUM_GAS_PRICE_MULTIPLIER=1.1
COSMOS_GAS_LIMIT=300000

# Monitoring & Logging
LOG_LEVEL=debug
SENTRY_DSN=your_sentry_dsn_for_error_tracking
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Configuration
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_service_api_key
FROM_EMAIL=noreply@cosmosswap.io

# External APIs
COINGECKO_API_KEY=your_coingecko_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# Swap Configuration
DEFAULT_TIMELOCK_DURATION=43200
MINIMUM_TIMELOCK_DURATION=3600
MAXIMUM_TIMELOCK_DURATION=86400
COORDINATOR_POLLING_INTERVAL=30000

# Development
DEBUG=cosmosswap:*
MOCK_BLOCKCHAIN_CALLS=false
ENABLE_SWAGGER_DOCS=true