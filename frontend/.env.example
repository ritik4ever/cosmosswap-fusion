# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api

# Blockchain Networks
VITE_ETHEREUM_CHAIN_ID=11155111
VITE_COSMOS_CHAIN_ID=cosmoshub-4

# RPC URLs
VITE_ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
VITE_COSMOS_RPC_URL=https://rpc-cosmoshub.cosmos-apis.com

# Contract Addresses (update after deployment)
VITE_ETHEREUM_CONTRACT_ADDRESS=0x...
VITE_COSMOS_CONTRACT_ADDRESS=cosmos1...

# Explorer URLs
VITE_ETHEREUM_EXPLORER_URL=https://sepolia.etherscan.io
VITE_COSMOS_EXPLORER_URL=https://cosmos.bigdipper.live

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DEBUG_MODE=false

# Third-party Services
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
VITE_SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Application Settings
VITE_APP_NAME=CosmosSwap
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Cross-chain atomic swaps between Ethereum and Cosmos

# Development
VITE_LOG_LEVEL=debug
VITE_MOCK_WALLETS=false